<!DOCTYPE html>
<html lang="en">
	<head>
		<%- include('../partials/head'); %>
	</head>
	<body class="standard-bg container">
		<header>
			<button class="dark first">
				<%- include('../partials/bag'); %>
			</button>
			<button class="dark first" onclick="openForm()">
				<%- include('../partials/filterIcon'); %>
			</button>
		</header>

		<main>
			<section id="filter">
				<form method="post" action="/discover" >
					<section class="form-group">
						<article>
							<label for="email">Male</label>
							<input type="checkbox" id="male" name="gender" value="Male" />
							<label for="email">Female</label>
							<input type="checkbox" id="female" name="gender" value="Female" />
						</article>
					</section>

					<section class="form-group">
						<label for="email">Age</label>
						<input type="number" id="age-l" name="minAge" />
						<input type="number" id="age-h" name="maxAge" />
					</section>

					<section class="form-group">
						<label for="language">Language</label>
						<select name="language" id="lang">
							<option value="choose">- Choose a language</option>
							<option value="Dutch">Dutch</option>
							<option value="German">German</option>
							<option value="Flemish">Flemish</option>
							<option value="French">French</option>
							<option value="Spanish">Spanish</option>
						</select>
					</section>

					<section class="form-group">
						<label for="country">Country</label>
						<select name="country" id="country">
							<option value="choose">- Choose a country</option>
							<option value="Netherlands">Netherlands</option>
							<option value="Germany">Germany</option>
							<option value="Belgium">Belgium</option>
							<option value="France">France</option>
							<option value="Spain">Spain</option>
						</select>
					</section>

					<section class="form-group">
						<label for="interests">Interests</label>
						<select name="interests" id="interests">
							<option value="choose">- Choose a interest</option>
							<option value="Sports">Sports</option>
							<option value="Music">Music</option>
							<option value="Movies">Movies</option>
							<option value="Nature">Nature</option>
							<option value="Animals">Animals</option>
							<option value="Games">Games</option>
							<option value="Drawing">Drawing</option>
						</select>
					</section>

					<button type="submit" class="btn">Apply</button>
					<button type="button" class="btn cancel" onclick="closeForm()">X</button>
				</form>
			</section>

			<% if (firstMatch) { %>
			<section class="matchable">
                    <article class="event-found">
						<img src="<%= firstMatch.photo %>" alt="Photo of user"/>
                      <h2><%= firstMatch.name %></h2>
                      <p>, <%= firstMatch.age %></p>
                      <p>, <%= firstMatch.gender %></p>
					  <p>Interests:</p>
                      <p><%= firstMatch.interests %></p>
					  <p>Language:</p>
                      <p><%= firstMatch.language %></p>
					  <p>Country:</p>
                      <p><%= firstMatch.country %></p>
                    </article>
			</section>

			<section class="match-btn">
				<form action="/disliked" method="post">
					<button class="dark dislike" type="submit" name="matchId" value="<%= firstMatch._id %>">
						<svg version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px"viewBox="0 0 250 250" style="enable-background:new 0 0 250 250;" xml:space="preserve">
